CREATE TABLE fonction (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nom VARCHAR(100) UNIQUE
);

CREATE TABLE type_emploie (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nom VARCHAR(100) UNIQUE
);

CREATE TABLE employe (
    id INT AUTO_INCREMENT PRIMARY KEY,
    matricule VARCHAR(10),
    nom VARCHAR(255),
    prenom VARCHAR(255),
    date_naissance DATE,
    sexe VARCHAR(10),
    rue VARCHAR(255),
    ville VARCHAR(255),
    code_postal VARCHAR(20),
    province VARCHAR(20),
    pays VARCHAR(100),
    telephone VARCHAR(20),
    telephone_urgence VARCHAR(20),
    email VARCHAR(255),
    nationalite VARCHAR(100),
    etat_civil VARCHAR(20),
    fonction_id INT,
    type_emploie_id INT,
    photo_profil VARCHAR(255),
    statut VARCHAR(20),
    date_embauche DATE,
    FOREIGN KEY (fonction_id) REFERENCES Fonction(id),
    FOREIGN KEY (type_emploie_id) REFERENCES type_emploie(id)
);


CREATE TABLE utilisateur (
    id INT AUTO_INCREMENT PRIMARY KEY,
    employe_id INT,
    mot_de_passe VARCHAR(255),
    date_creation DATE,
    FOREIGN KEY (employe_id) REFERENCES employe(id)
);